<resources>
    <!-- Base Light application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:editTextColor">@color/pure_black</item>
        <item name="android:textColorHint">#686868</item>

        <item name="colorText">@color/pure_black</item>
        <item name="colorButton">@color/colorPrimary</item>
        <item name="colorButtonText">@color/pure_black</item>
        <item name="colorFab">@color/colorAccent</item>
        <item name="colorFabImage">@color/pure_black</item>
        <item name="colorBackground">@color/colorAccentLighter</item>
        <item name="colorNavBarLeft">@color/colorPrimary</item>
        <item name="colorNavBarMid">@color/colorAccent</item>
        <item name="colorNavBarRight">@color/colorAccentLighter</item>
        <item name="colorImageView">@color/pure_black</item>
        <item name="colorAlertDialog">@color/light_grey</item>
        <item name="colorAlertDialogText">@color/pure_black</item>
        <item name="colorToast">@color/light_grey</item>
        <item name="colorToastText">@color/pure_black</item>
        <item name="colorRVBackground">@color/colorAccentLighter</item>
        <item name="colorRVItemText">@color/pure_black</item>
        <item name="colorRVItemBackground">@color/colorAccentLighter</item>
        <item name="colorBackgroundLogin">@color/colorPrimary</item>
        <item name="colorBackgroundNavBar">@color/colorAccentLighter</item>
        <item name="colorNavHeaderText">@color/pure_black</item>
        <item name="colorRVItemImage">@color/pure_black</item>
        <item name="colorRVItemOptions">@color/pure_black</item>
        <item name="colorNavBarHeaderImage">@color/pure_black</item>
        <item name="colorNavBarHeaderText">@color/pure_black</item>
        <item name="colorNavBarText">@color/pure_black</item>
        <item name="colorNavBarIcon">@color/pure_black</item>
        <item name="colorTabBackground">@color/colorAccent</item>

        <item name="drawerArrowStyle">@style/drawerArrowStyle</item>
        <!-- color of popup in right top -->
        <item name="android:itemBackground">@color/colorAccent</item>
        <item name="android:textColor">@color/pure_black</item>
    </style>

    <!-- Base Dark application theme. -->
    <style name="AppThemeDark" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/darkColorPrimary</item>
        <item name="colorPrimaryDark">@color/darkColorPrimaryDark</item>
        <item name="colorAccent">@color/darkColorAccent</item>
        <item name="android:editTextColor">@color/pure_white</item>
        <item name="android:textColorHint">#686868</item>

        <item name="colorText">@color/pure_white</item>
        <item name="colorButton">@color/darkColorPrimary</item>
        <item name="colorButtonText">@color/pure_white</item>
        <item name="colorFab">@color/darkColorAccent</item>
        <item name="colorFabImage">@color/pure_white</item>
        <item name="colorBackground">@color/backgroundGrey</item>
        <item name="colorNavBarLeft">@color/darkColorPrimaryDarker</item>
        <item name="colorNavBarMid">@color/darkColorAccentLighter</item>
        <item name="colorNavBarRight">@color/darkColorAccent</item>
        <item name="colorImageView">@color/pure_white</item>
        <item name="colorAlertDialog">@color/light_grey</item>
        <item name="colorAlertDialogText">@color/pure_white</item>
        <item name="colorToast">@color/light_grey</item>
        <item name="colorToastText">@color/pure_white</item>
        <item name="colorRVBackground">@color/backgroundGrey</item>
        <item name="colorRVItemText">@color/pure_white</item>
        <item name="colorRVItemBackground">@color/backgroundGrey</item>
        <item name="colorBackgroundLogin">@color/colorPrimary</item>
        <item name="colorBackgroundNavBar">@color/backgroundGrey</item>
        <item name="colorNavHeaderText">@color/pure_white</item>
        <item name="colorRVItemImage">@color/pure_white</item>
        <item name="colorRVItemOptions">@color/pure_white</item>
        <item name="colorNavBarHeaderImage">@color/pure_white</item>
        <item name="colorNavBarHeaderText">@color/pure_white</item>
        <item name="colorNavBarText">@color/pure_white</item>
        <item name="colorNavBarIcon">@color/pure_white</item>
        <item name="colorTabBackground">@color/darkColorAccent</item>

        <item name="drawerArrowStyle">@style/drawerArrowStyle</item>
        <!-- color of popup in right top -->
        <item name="android:itemBackground">@color/darkColorAccent</item>
        <item name="android:textColor">@color/pure_white</item>
    </style>

    <!-- create style for all elements -->
    <style name="button" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/custom_rounded_corners</item>
        <item name="android:textColor">?attr/colorButtonText</item>
        <item name="android:layout_margin">5dp</item>
    </style>
    
    <style name="fab">
        <item name="android:background">?attr/colorFab</item>
        <item name="android:tint">?attr/colorFabImage</item>
    </style>

    <style name="textView">
        <item name="android:color">?attr/colorText</item>
    </style>

    <style name="navBar">
        <item name="android:background">?attr/colorBackgroundNavBar</item>
        <item name="itemTextColor">?attr/colorNavBarText</item>
        <item name="itemIconTint">?attr/colorNavBarIcon</item>
    </style>

    <style name="rvItem">
        <item name="android:background">?attr/colorRVItemBackground</item>
    </style>

    <style name="rvItemText">
        <item name="android:textColor">?attr/colorRVItemText</item>
    </style>

    <style name="rvItemImage">
        <item name="android:tint">?attr/colorRVItemImage</item>
    </style>

    <style name="rvItemOptions">
        <item name="tint">?attr/colorRVItemOptions</item>
        <item name="android:background">?attr/colorRVItemBackground</item>
    </style>

    <style name="image">
        <item name="tint">?attr/colorImageView</item>
    </style>

    <style name="navBarHeaderImage">
        <item name="tint">?attr/colorNavBarHeaderImage</item>
    </style>

    <style name="navBarHeaderText">
        <item name="android:textColor">?attr/colorNavBarHeaderText</item>
    </style>

    <style name="spinner">
        <item name="android:popupBackground">?attr/colorBackground</item>
    </style>

    <style name="drawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/pure_white</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="LoginTheme" parent="FirebaseUI">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryDarker</item>
        <item name="colorButtonNormal">@color/colorPrimaryDarker</item>
        <item name="colorControlNormal">@color/pure_white</item>
        <item name="colorControlActivated">@color/pure_white</item>
        <item name="colorControlHighlight">@color/pure_white</item>
        <item name="android:textColor">@color/pure_white</item>
        <item name="android:textColorPrimary">@color/pure_white</item>
        <item name="android:textColorSecondary">@color/pure_white</item>
        <item name="android:windowBackground">@color/colorPrimary</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textColorHint">@color/colorAccent</item>
    </style>

    <style name="FirebaseUI.Text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/pure_white</item>
    </style>

    <style name="FirebaseUI.Text.Link">
        <item name="android:textColor">@color/pure_black</item>
    </style>

    <style name="AlertDialogTheme" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorSurface">?attr/colorBackground</item>
        <item name="android:background">?attr/colorBackground</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="materialAlertDialogTitleTextStyle">@style/TitleTextStyle</item>
        <item name="materialAlertDialogBodyTextStyle">@style/BodyTextStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarNeutralButtonStyle">@style/NegativeButtonStyle</item>
    </style>
    <style name="TitleTextStyle" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">?attr/colorText</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="BodyTextStyle" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:textColor">?attr/colorText</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">#D00000</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">?attr/colorText</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="NeutralButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">?attr/colorText</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AlertDialogTheme2" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorSurface">?attr/colorBackground</item>
        <item name="android:background">?attr/colorBackground</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="materialAlertDialogTitleTextStyle">@style/TitleTextStyle2</item>
        <item name="materialAlertDialogBodyTextStyle">@style/BodyTextStyle2</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle2</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle2</item>
        <item name="buttonBarNeutralButtonStyle">@style/NegativeButtonStyle2</item>
    </style>
    <style name="TitleTextStyle2" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">?attr/colorText</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="BodyTextStyle2" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:textColor">?attr/colorText</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="PositiveButtonStyle2" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">#00AA00</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="NegativeButtonStyle2" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">?attr/colorText</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="NeutralButtonStyle2" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">?attr/colorText</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>