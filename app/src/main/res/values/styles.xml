<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorText">#bbbbbb</item>
        <item name="colorButton">#9967f0</item>
        <item name="colorButtonText">#000000</item>
        <item name="colorFab">#35204f</item>
        <item name="colorFabImage">#000000</item>
        <item name="colorBackground">#cda3ff</item>
        <item name="colorNavBarLeft">@color/colorPrimaryDark</item>
        <item name="colorNavBarMid">@color/colorPrimary</item>
        <item name="colorNavBarRight">@color/colorAccent</item>
        <item name="colorImageView">#000000</item>
        <item name="colorAlertDialog">#666666</item>
        <item name="colorAlertDialogText">#000000</item>
        <item name="colorToast">#987654</item>
        <item name="colorToastText">#000000</item>
        <item name="colorRVBackground">#192837</item>
        <item name="colorRVItemText">#424242</item>
        <item name="colorRVItemBackground">#926532</item>
        <item name="colorBackgroundLogin">#991166</item>
        <item name="colorBackgroundNavBar">#13f792</item>
        <item name="colorNavHeaderText">#f982f3</item>
        <item name="colorRVItemImage">#f982f3</item>
        <item name="colorRVItemOptions">#e871af</item>
        <item name="colorNavBarHeaderImage">#ffee99</item>
        <item name="colorNavBarHeaderText">#babe69</item>
    </style>

    <style name="AppThemeDark" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#000000</item>
        <item name="colorPrimaryDark">#000000</item>
        <item name="colorAccent">#000000</item>
        <item name="colorText">#bbbbbb</item>
        <item name="colorButton">#9967f0</item>
        <item name="colorButtonText">#000000</item>
        <item name="colorFab">#35204f</item>
        <item name="colorFabImage">#000000</item>
        <item name="colorBackground">#cda3ff</item>
        <item name="colorNavBarLeft">@color/colorPrimaryDark</item>
        <item name="colorNavBarMid">@color/colorPrimary</item>
        <item name="colorNavBarRight">@color/colorAccent</item>
        <item name="colorImageView">#000000</item>
        <item name="colorAlertDialog">#666666</item>
        <item name="colorAlertDialogText">#000000</item>
        <item name="colorToast">#987654</item>
        <item name="colorToastText">#000000</item>
        <item name="colorRVBackground">#192837</item>
        <item name="colorRVItemText">#f982f3</item>
        <item name="colorRVItemBackground">#926532</item>
        <item name="colorBackgroundLogin">#991166</item>
        <item name="colorBackgroundNavBar">#583426</item>
        <item name="colorNavHeaderText">#cafeba</item>
        <item name="colorRVItemImage">#f982f3</item>
        <item name="colorRVItemOptions">#e871af</item>
        <item name="colorNavBarHeaderImage">#ffee99</item>
        <item name="colorNavBarHeaderText">#babe69</item>

    </style>
    
    <!-- create style for all elements -->
    <style name="button" parent="Widget.AppCompat.Button">
        <item name="android:background">?attr/colorBackgroundNavBar</item>
        <item name="android:textColor">?attr/colorButtonText</item>
    </style>
    
    <style name="fab">
        <item name="android:background">?attr/colorFab</item>
        <item name="android:tint">?attr/colorFabImage</item>
    </style>

    <style name="textView">
        <item name="android:color">?attr/colorText</item>
    </style>

    <style name="navBar">
        <item name="android:background">?attr/colorBackgroundNavBar</item>
    </style>

    <style name="rvItem">
        <item name="android:background">?attr/colorRVItemBackground</item>
    </style>

    <style name="rvItemText">
        <item name="android:textColor">?attr/colorRVItemText</item>
    </style>

    <style name="rvItemImage">
        <item name="android:tint">?attr/colorRVItemImage</item>
    </style>

    <style name="rvItemOptions">
        <item name="tint">?attr/colorRVItemOptions</item>
    </style>

    <style name="image">
        <item name="tint">?attr/colorImageView</item>
    </style>

    <style name="navBarHeaderImage">
        <item name="tint">?attr/colorNavBarHeaderImage</item>
    </style>

    <style name="navBarHeaderText">
        <item name="android:textColor">?attr/colorNavBarHeaderText</item>
    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- For the static text like "Name" over the actual name ("Max") -->
    <style name="TextStatic" parent="TextAppearance.AppCompat" >
        <item name="android:textSize">18sp</item>
        <item name="color">@color/grey_staticText</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <!-- For the dynamic text like "Max Mustermann" -->
    <style name="TextDynamic" parent="TextAppearance.AppCompat" >
        <item name="android:textSize">18sp</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="AlertDialogTheme" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="materialAlertDialogTitleTextStyle">@style/TitleTextStyle</item>
        <item name="materialAlertDialogBodyTextStyle">@style/BodyTextStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarNeutralButtonStyle">@style/NegativeButtonStyle</item>
    </style>
    <style name="TitleTextStyle" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="BodyTextStyle" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:textColorPrimary">#000000</item>
    </style>
    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">#FF0000</item>
    </style>
    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>
    <style name="NeutralButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">#000000</item>
    </style>

    <style name="AlertDialogTheme2" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="materialAlertDialogTitleTextStyle">@style/TitleTextStyle2</item>
        <item name="materialAlertDialogBodyTextStyle">@style/BodyTextStyle2</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle2</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle2</item>
        <item name="buttonBarNeutralButtonStyle">@style/NegativeButtonStyle2</item>
    </style>
    <style name="TitleTextStyle2" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="BodyTextStyle2" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:textColorPrimary">#000000</item>
    </style>
    <style name="PositiveButtonStyle2" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">#00FF00</item>
    </style>
    <style name="NegativeButtonStyle2" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">#000000</item>
    </style>
    <style name="NeutralButtonStyle2" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">#000000</item>
    </style>

</resources>